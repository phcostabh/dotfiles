#!/usr/bin/env node

const site = process.argv[2]
const phrase = process.argv[3]

const wordsBefore = site.indexOf('.')
const wordsAfter = site.slice(site.lastIndexOf('.')).length - 1
const wordsMultiplied = wordsBefore * wordsAfter
const phraseInitials = phrase
  .split(' ')
  .map(i => i[0].toLowerCase())
  .join('')
const siteConsonantsUpCased = site
  .slice(0, site.indexOf('.'))
  .replace(/[aeiou]/gi, '')
  .toUpperCase()
const remainingCharsCount = wordsBefore - wordsAfter

console.log(
  wordsMultiplied + phraseInitials + siteConsonantsUpCased + remainingCharsCount
)
